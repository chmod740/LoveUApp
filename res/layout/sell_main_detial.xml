<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/light_grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:background="@color/darkblue"
                      android:layout_height="40dp">
            <Button   style="@style/top_back_text"
                      android:id="@+id/sell_d_back"/>

            <TextView android:layout_width="match_parent"
                      android:text="@string/detail"
                      android:gravity="center"
                      android:textSize="20sp"
                      android:textColor="@color/white"
                      android:layout_height="match_parent"/>

        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">


            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="100dp"
                           android:background="@color/light_grey"
                           android:id="@+id/sell_d_image"
                           android:layout_height="100dp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:layout_height="fill_parent">
                    <TextView android:layout_width="fill_parent"
                              android:layout_weight="1"
                              android:textSize="18dp"
                              android:gravity="center"
                              android:textColor="@color/black"
                              android:id="@+id/sell_d_username"
                              android:layout_height="fill_parent"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_weight="1"
                                  android:orientation="horizontal"
                                  android:layout_height="match_parent">
                        <TextView android:layout_width="wrap_content"
                                  android:textSize="15dp"
                                  android:gravity="center_vertical"
                                  android:textColor="@color/black"
                                  android:text="上架时间："
                                  android:layout_height="fill_parent"/>
                        <TextView android:layout_width="fill_parent"
                                  android:textSize="15dp"
                                  android:gravity="center"
                                  android:id="@+id/sell_d_uptime"
                                  android:textColor="@color/black"
                                  android:layout_height="fill_parent"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_weight="1"
                                  android:orientation="horizontal"
                                  android:layout_height="match_parent">
                        <TextView android:layout_width="wrap_content"
                                  android:textSize="15dp"
                                  android:gravity="center_vertical"
                                  android:textColor="@color/black"
                                  android:text="下架时间："
                                  android:layout_height="fill_parent"/>
                        <TextView android:layout_width="fill_parent"
                                  android:textSize="15dp"
                                  android:gravity="center"
                                  android:id="@+id/sell_d_downtime"
                                  android:textColor="@color/black"
                                  android:layout_height="fill_parent"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/white" />
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content"
                          android:text="当前竞拍价格(元)："
                          android:textSize="18dp"
                          android:textColor="@color/black"
                          android:gravity="center_vertical"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textSize="18dp"
                          android:textColor="@color/black"
                          android:gravity="center"
                          android:id="@+id/sell_d_money"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/white" />
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="Title："
                          android:textSize="18dp"
                          android:textColor="@color/black"
                          android:gravity="center_vertical"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textSize="18dp"
                          android:id="@+id/sell_d_title"
                          android:gravity="center_vertical"
                          android:textColor="@color/black"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/white" />
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="物品信息："
                          android:textSize="18dp"
                          android:textColor="@color/black"
                          android:gravity="center_vertical"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="match_parent"
                          android:textSize="15dp"
                          android:id="@+id/sell_d_info"
                          android:textColor="@color/blue"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="wrap_content"
            android:textSize="18dp"
            android:id="@+id/sell_d_button"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/login_button_selector"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"/>

</RelativeLayout>