<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView android:layout_width="100dp" android:layout_height="100dp"
               android:id="@+id/run3_img"
               android:src="@drawable/default1"
               android:paddingBottom="@dimen/activity_vertical_margin"
               android:paddingLeft="@dimen/activity_horizontal_margin"
               android:paddingRight="@dimen/activity_horizontal_margin"
               android:paddingTop="@dimen/activity_vertical_margin"
    />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/run3_tx3"
                  android:text="显示内容"
                  android:textSize="25dp"
                  android:layout_weight="5"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="90dp"
                  android:id="@+id/run3_tx1"
                  android:text="显示内容"
        android:textSize="25dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/run3_tx2"
                      android:text="显示内容"
                      android:textSize="25dp"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="跑/学"
                      android:textColor="@color/green"
                      android:textSize="25dp"
                      android:gravity="right" android:id="@+id/run3_1_way"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>