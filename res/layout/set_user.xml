<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#E0E0E0">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="#ff9100"
                  android:layout_height="50dp">
        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:text="返回"
                  android:textSize="20dp"
                  android:gravity="center"
                  android:clickable="true"
                  android:id="@+id/manage_back"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="match_parent"
                  android:gravity="center"
                  android:layout_weight="1"
                  android:text="个人管理"
                  android:textSize="20dp"
                  android:textCursorDrawable="@null"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="输入学号："
                  android:phoneNumber="true"
                  android:textColor="@color/black"
                  android:textSize="20dp"
                  android:gravity="center"
                  android:layout_height="50dp"/>
        <EditText android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:id="@+id/manage_number"
                  android:textSize="20dp"
                  android:textCursorDrawable="@null"
                  android:background="#FFFFFF"
                  android:textColor="#000000"
                  android:layout_height="50dp"/>

    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="输入密码："
                  android:textColor="@color/black"
                  android:textSize="20dp"
                  android:gravity="center"
                  android:layout_height="50dp"/>
        <EditText android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/manage_password"
                  android:textCursorDrawable="@null"
                  android:background="#FFFFFF"
                  android:textColor="#000000"
                  android:layout_height="50dp"/>

    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:text="确定"
            android:id="@+id/manage_ok"
            android:gravity="center"
            android:background="@drawable/login_button_selector"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/blue"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="真实姓名："
                  android:textSize="20dp"
                  android:gravity="center"
                  android:layout_height="50dp"/>
        <TextView android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/manage_TrueName"
                  android:background="#FFFFFF"
                  android:textColor="#000000"
                  android:layout_height="50dp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/blue"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="性别        ："
                  android:textSize="20dp"
                  android:gravity="center"
                  android:layout_height="50dp"/>
        <TextView android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/manage_sex"
                  android:background="#FFFFFF"
                  android:textColor="#000000"
                  android:layout_height="50dp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/blue"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="专业        ："
                  android:textSize="20dp"
                  android:gravity="center"
                  android:layout_height="50dp"/>
        <TextView android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/manage_major"
                  android:background="#FFFFFF"
                  android:textColor="#000000"
                  android:layout_height="50dp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/blue"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="年级        ："
                  android:textSize="20dp"
                  android:gravity="center"
                  android:layout_height="50dp"/>
        <TextView android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/manage_grade"
                  android:background="#FFFFFF"
                  android:textColor="#000000"
                  android:layout_height="50dp"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/blue"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <CheckBox android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/manage_agreement"
                  android:textColor="#FF0000"
                  android:text="同意保密协议"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>