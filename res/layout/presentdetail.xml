<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray">
    <TextView android:layout_width="match_parent" android:layout_height="50dp"
    android:text="详情"
    android:textSize="25dp"
    android:textColor="@color/white"
    android:background="@color/blue"
    android:gravity="center"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin">



    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView android:layout_width="100dp" android:layout_height="100dp"
                   android:id="@+id/present_detail_img"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="赠送发起人"
                  android:id="@+id/present_detail_man"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="200dp"
        android:text="详细内容"
        android:textSize="25dp"

        android:textColor="@color/black"
                  android:maxLines="5"
                  android:maxLength="100"
                  android:id="@+id/present_detail_info"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:textSize="21dp"
        android:text="留言："
        android:textColor="@color/black"/>
        <EditText android:layout_width="match_parent" android:layout_height="100dp"
        android:textSize="21dp"
                  android:hint="我很喜欢这个~"
                  android:background="@color/white"
                  android:maxLines="5"
                  android:maxLength="100"
                  android:textCursorDrawable="@null"
                  android:gravity="top"
                  android:textColor="@color/black"
                  android:id="@+id/present_detail_ed"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/blue"
        android:text="查看评论"
        android:layout_gravity="right"
        android:id="@+id/present_detail_pinglun"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">


        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/present_detail_bt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_selector"
        android:text="我想要~"
        android:textColor="@color/white"
        android:textSize="23dp"/>
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>