    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textSize="20dp"/>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">


        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_above="@+id/run2_tx2"
                      android:paddingBottom="3dp"
                      android:paddingLeft="3dp"
                      android:paddingRight="3dp"
                      android:paddingTop="3dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="@dimen/edtextsize"
                      android:text="地点："
                      android:textColor="@color/black"/>
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:background="@drawable/edittext_selector"
                      android:textColor="@color/black"
                      android:textSize="@dimen/edtextsize"
                      android:id="@+id/run2_ed3"
                      android:textCursorDrawable="@null"
                      android:gravity="top"
                      android:paddingBottom="3dp"
                      android:paddingLeft="3dp"
                      android:paddingRight="3dp"
                      android:paddingTop="3dp"
                      android:maxLines="1"
                      android:maxLength="10"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/run2_shengyu1"
                      android:gravity="right"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="5dp"
                      android:text= " "/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:textSize="@dimen/edtextsize"
                      android:text="内容："
                      android:textColor="@color/black"/>
            <EditText android:layout_width="match_parent" android:layout_height="match_parent"
                      android:background="@drawable/edittext_selector"
                      android:textColor="@color/black"
                      android:textSize="@dimen/edtextsize"
                      android:id="@+id/run2_ed2"
                      android:textCursorDrawable="@null"
                      android:gravity="top"
                      android:paddingBottom="3dp"
                      android:paddingLeft="3dp"
                      android:paddingRight="3dp"
                      android:paddingTop="3dp"
                      android:maxLines="7"
                      android:maxLength="100"
                      android:layout_weight="5"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/run2_shengyu"
                      android:gravity="right"/>

        </LinearLayout>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:textSize="10dp"
                  android:layout_above="@+id/run2_bt"
                  android:id="@+id/run2_tx2"/>


        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@drawable/login_button_selector"
                android:layout_alignParentBottom="true"
                android:id="@+id/run2_bt"
                android:onClick="run2_click"
                android:text="设置时间"/>
    </RelativeLayout>


</LinearLayout>