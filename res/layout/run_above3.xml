<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/darkblue"
              android:layout_height="match_parent">

    <Button android:id="@+id/run_top_3_button"
            android:background="@drawable/open_slidingmenu"
            android:layout_width="45dp"
            android:layout_height="wrap_content"/>

    <RadioGroup
            android:id="@+id/topRg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/abovegroup_selector">

        <RadioButton
                android:id="@+id/run_top_31"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:checked="true"
                android:text="发出"
                android:button="@null"
                android:textSize="16dp"
                android:textColor="@color/abovewrite_selector"
                android:background="@drawable/abovebuttonl_selector" />
        <RadioButton
                android:id="@+id/run_top_32"
                android:button="@null"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textSize="16dp"
                android:text="接受"
                android:gravity="center"
                android:background="@drawable/abovebuttonr_selector"
                android:textColor="@color/abovewrite_selector" />

    </RadioGroup>
</RelativeLayout>