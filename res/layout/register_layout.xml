<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="账号："
                  android:textSize="20dip"/>
        <EditText android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="账号"
                  android:textSize="20dip"
                  android:lines="1"
        android:id="@+id/register_zhanghao"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="密码："
                  android:textSize="20dip"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="密码"
                  android:textSize="20dip"
                  android:lines="1"
                  android:inputType="textPassword"
                  android:id="@+id/register_mima1"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="重复密码："
                  android:textSize="20dip"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="重复密码"
                  android:textSize="20dip"
                  android:lines="1"
                  android:inputType="textPassword"
                  android:id="@+id/register_mima2"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="真实姓名："
                  android:textSize="20dip"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text=""
                  android:textSize="20dip"
                  android:lines="1"
                  android:id="@+id/register_mingzi"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="性别："
                  android:textSize="20dip"
        android:id="@+id/register_sex"/>
        <Spinner android:id="@+id/register_Spinner1"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"></Spinner>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="手机号码："
                  android:textSize="20dip"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="20dip"
                  android:lines="1"
                  android:id="@+id/register_haoma"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="专业："
                  android:textSize="20dip"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="20dip"
                  android:lines="1"
                  android:id="@+id/register_zhuanye"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="年级："
                  android:textSize="20dip"
                  android:id="@+id/register_grade"/>
        <Spinner android:id="@+id/register_Spinner2"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"></Spinner>

    </LinearLayout>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="注册"
    android:onClick="click"/>
</LinearLayout>